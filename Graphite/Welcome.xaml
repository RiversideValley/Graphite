<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Graphite.Welcome"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Graphite"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Welcome to Graphite">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Rectangle Grid.Row="0" Fill="{ThemeResource SystemAccentColor}" Height="64"/>
        <TextBlock Text="Welcome to Graphite" 
                   Style="{ThemeResource TitleTextBlockStyle}" 
                   Margin="20,0,0,0" 
                   VerticalAlignment="Center"/>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- User Info -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <PersonPicture x:Name="UserProfilePicture" Width="100" Height="100"/>
                <StackPanel Margin="20,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="WelcomeMessage" 
                               Style="{ThemeResource SubtitleTextBlockStyle}" 
                               Text="Welcome, User!"/>
                    <TextBlock x:Name="UserEmail" 
                               Style="{ThemeResource BodyTextBlockStyle}" 
                               Text="user@example.com" 
                               Opacity="0.6"/>
                </StackPanel>
            </StackPanel>

            <!-- Quick Actions -->
            <TextBlock Grid.Row="1" 
                       Text="Quick Actions" 
                       Style="{ThemeResource SubtitleTextBlockStyle}" 
                       Margin="0,0,0,10"/>

            <GridView Grid.Row="2" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top">
                <Button x:Name="BrowseButton" 
                        Click="BrowseButton_Click" 
                        Width="150" Height="150" 
                        Margin="0,0,10,10">
                    <StackPanel>
                        <FontIcon Glyph="&#xE8A5;" FontSize="48"/>
                        <TextBlock Text="Browse" 
                                   Style="{ThemeResource BodyTextBlockStyle}" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="SettingsButton" 
                        Click="SettingsButton_Click" 
                        Width="150" Height="150" 
                        Margin="0,0,10,10">
                    <StackPanel>
                        <FontIcon Glyph="&#xE713;" FontSize="48"/>
                        <TextBlock Text="Settings" 
                                   Style="{ThemeResource BodyTextBlockStyle}" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="HelpButton" 
                        Click="HelpButton_Click" 
                        Width="150" Height="150" 
                        Margin="0,0,10,10">
                    <StackPanel>
                        <FontIcon Glyph="&#xE897;" FontSize="48"/>
                        <TextBlock Text="Help" 
                                   Style="{ThemeResource BodyTextBlockStyle}" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
                <Button x:Name="CreateProfileButton" 
                        Click="CreateProfileButton_Click" 
                        Width="150" Height="150" 
                        Margin="0,0,10,10">
                    <StackPanel>
                        <FontIcon Glyph="&#xE710;" FontSize="48"/>
                        <TextBlock Text="Create Profile" 
                                   Style="{ThemeResource BodyTextBlockStyle}" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Button>
            </GridView>

            <!-- Logout Button -->
            <Button Grid.Row="3" 
                    x:Name="LogoutButton" 
                    Content="Logout" 
                    Click="LogoutButton_Click" 
                    HorizontalAlignment="Right" 
                    Style="{ThemeResource AccentButtonStyle}"/>
        </Grid>
    </Grid>
</Window>