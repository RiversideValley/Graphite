<Window
    x:Class="Graphite.HomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:graphite="using:Graphite.Controls"
    xmlns:graphitehelper="using:Graphite.Helpers"
    Title="Graphite Home Page">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <graphite:GraphiteTabViewContainer 
            x:Name="Tabs"
            x:FieldModifier="public"
            Grid.Row="0"
            Margin="0,-20,0,0"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Mode="Modern"
            CanDragTabs="True"
            CanReorderTabs="True"
            Loaded="Tabs_Loaded"
            AddTabButtonClick="Tabs_AddTabButtonClick"
            TabCloseRequested="Tabs_TabCloseRequested">

            <graphite:GraphiteTabViewContainer.TabStripHeader>
                <PersonPicture
                    x:Name="Profile"
                    Width="32"
                    Height="32"
                    Margin="5,30,0,0"/>
            </graphite:GraphiteTabViewContainer.TabStripHeader>

            <graphite:GraphiteTabViewContainer.TabStripFooter>
                <Grid
                    x:Name="Apptitlebar"
                    MinWidth="175"
                    Margin="0,0,0,0"
                    IsHitTestVisible="False" />
            </graphite:GraphiteTabViewContainer.TabStripFooter>
        </graphite:GraphiteTabViewContainer>

        <Grid x:Name="ClassicToolbar" Grid.Row="1" Height="37"
              Margin="0,5,0,0"
              Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <Button x:Name="BackBtn" Content="{graphitehelper:FluentIcon Glyph=&#xE72B;}" Tag="Back" Background="Transparent" BorderBrush="Transparent">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="B" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="ForwBtn" Content="{graphitehelper:FluentIcon Glyph=&#xE72A;}" Tag="Forward" Background="Transparent" BorderBrush="Transparent">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="F" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="ReloadBtn" Content="{graphitehelper:FluentIcon Glyph=&#xE72C;}" Tag="Refresh" Background="Transparent" BorderBrush="Transparent">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="R" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                </Button>
                <Button x:Name="HomeBtn" Content="{graphitehelper:FluentIcon Glyph=&#xE80F;}" Tag="Home" Background="Transparent" BorderBrush="Transparent">
                    <Button.KeyboardAccelerators>
                        <KeyboardAccelerator Key="H" Modifiers="Control" />
                    </Button.KeyboardAccelerators>
                </Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>