<Page
    x:Class="Riverside.Graphite.Pages.WebContent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:firebrowser="using:Riverside.Graphite.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI">
    <Page.Resources>
        <CommandBarFlyout x:Name="Ctx" Placement="BottomEdgeAlignedLeft">
            <AppBarButton
                x:Uid="Back"
                Click="ContextMenuItem_Click"
                Icon="{firebrowser:FluentIcon Glyph=&#xE72B;}"
                Tag="MenuBack"
                ToolTipService.ToolTip="Back" />
            <AppBarButton
                Click="ContextMenuItem_Click"
                Icon="{firebrowser:FluentIcon Glyph=&#xE72A;}"
                Tag="Forward"
                ToolTipService.ToolTip="Forward" />
            <AppBarButton
                Click="ContextMenuItem_Click"
                Icon="{firebrowser:FluentIcon Glyph=&#xE72D;}"
                Tag="Share"
                ToolTipService.ToolTip="Share" />
            <AppBarButton
                Click="ContextMenuItem_Click"
                Icon="{firebrowser:FluentIcon Glyph=&#xE749;}"
                Tag="Print"
                ToolTipService.ToolTip="Print" />
            <CommandBarFlyout.SecondaryCommands>
                <AppBarButton
                    Click="ContextMenuItem_Click"
                    Icon="{firebrowser:FluentIcon Glyph=&#xE8C8;}"
                    Label="Copy"
                    Tag="Copy">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="C" Modifiers="Control" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton
                    Click="ContextMenuItem_Click"
                    Icon="{firebrowser:FluentIcon Glyph=&#xE8B3;}"
                    Label="Select all"
                    Tag="Select">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="A" Modifiers="Control" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton
                    x:Name="OpenLinks"
                    Icon="{firebrowser:FluentIcon Glyph=&#xE8AD;}"
                    Label="Open In"
                    Visibility="Collapsed">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Click="ContextClicked_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xEC6C;}"
                                Tag="OpenInTab"
                                Text="Open In New Tab" />
                            <MenuFlyoutItem
                                Click="ContextClicked_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xE737;}"
                                Tag="OpenInWindow"
                                Text="Open In New Window" />
                            <MenuFlyoutItem
                                Click="ContextClicked_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xE8A1;}"
                                Tag="OpenInPop"
                                Text="Open In PopUp" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton Icon="{firebrowser:FluentIcon Glyph=&#xEC7A;}" Label="Tools">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                Click="ContextClicked_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xEFA9;}"
                                Tag="Read"
                                Text="Read Aloud" />
                            <MenuFlyoutItem
                                Click="ContextClicked_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xECAA;}"
                                IsEnabled="False"
                                Tag="WebApp"
                                Text="Create WebApp" />
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
                <AppBarButton
                    Click="ContextMenuItem_Click"
                    Icon="{firebrowser:FluentIcon Glyph=&#xE74E;}"
                    Label="Save"
                    Tag="Save">
                    <AppBarButton.KeyboardAccelerators>
                        <KeyboardAccelerator Key="S" Modifiers="Control" />
                    </AppBarButton.KeyboardAccelerators>
                </AppBarButton>
                <AppBarButton
                    Click="ContextMenuItem_Click"
                    Icon="{firebrowser:FluentIcon Glyph=&#xE74C;}"
                    Label="View source"
                    Tag="Source" />
                <AppBarButton
                    Click="ContextMenuItem_Click"
                    Icon="{firebrowser:FluentIcon Glyph=&#xF259;}"
                    Label="TaskManager"
                    Tag="Taskmgr" />
                <AppBarButton Icon="{firebrowser:FluentIcon Glyph=&#xE72E;}" Label="Site Permissions">
                    <AppBarButton.Flyout>
                        <MenuFlyout>
                            <ToggleMenuFlyoutItem
                                Click="PermissionToggle_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xE714;}"
                                Tag="Camera"
                                Text="Camera" />
                            <ToggleMenuFlyoutItem
                                Click="PermissionToggle_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xE720;}"
                                Tag="Microphone"
                                Text="Microphone" />
                            <ToggleMenuFlyoutItem
                                Click="PermissionToggle_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xE81D;}"
                                Tag="Geolocation"
                                Text="Geolocation" />
                            <ToggleMenuFlyoutItem
                                Click="PermissionToggle_Click"
                                Icon="{firebrowser:FluentIcon Glyph=&#xE91C;}"
                                Tag="Notifications"
                                Text="Notifications" />
                            <!--  Add more ToggleMenuFlyoutItems for other permission types as needed  -->
                        </MenuFlyout>
                    </AppBarButton.Flyout>
                </AppBarButton>
            </CommandBarFlyout.SecondaryCommands>
        </CommandBarFlyout>
    </Page.Resources>
    <Grid x:Name="Main">
        <Grid
            x:Name="offlinePage"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            Visibility="Collapsed">
            <ScrollViewer>
                <StackPanel
                    Margin="0,30"
                    HorizontalAlignment="Center"
                    Spacing="16">
                    <TextBlock
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Unable to reach the web"
                        TextAlignment="Center" />
                    <TextBlock
                        Style="{ThemeResource BodyTextBlockStyle}"
                        Text="FireBrowser-Uwp is unable to load the page you're requesting."
                        TextAlignment="Center" />
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="10">
                        <FontIcon FontSize="24" Glyph="&#xE7F8;" />
                        <ProgressBar
                            x:Name="pcToNet"
                            Width="80"
                            Foreground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                            Value="100" />
                        <FontIcon
                            x:Name="netIcon"
                            FontSize="24"
                            Glyph="&#xEC3F;" />
                        <ProgressBar
                            x:Name="netToWeb"
                            Width="80"
                            Foreground="Red"
                            Value="100" />
                        <FontIcon
                            FontSize="24"
                            Glyph="&#xF384;"
                            Opacity="0.3" />
                    </StackPanel>
                    <InfoBar
                        x:Name="offlineInfoBar"
                        Title="It seems like your PC isn't connected to any network."
                        MaxWidth="600"
                        IsClosable="False"
                        IsOpen="True"
                        Severity="Warning" />
                    <TextBlock
                        MaxWidth="600"
                        Style="{ThemeResource SubtitleTextBlockStyle}"
                        Text="Let's get you back online!" />
                    <TextBlock
                        MaxWidth="600"
                        Style="{ThemeResource BodyTextBlockStyle}"
                        TextWrapping="WrapWholeWords">
                        To get connected, try these recommendations:
                    </TextBlock>
                    <Expander MaxWidth="600" HorizontalContentAlignment="Left">
                        <Expander.Header>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Check your network cables, modem or routers" />
                        </Expander.Header>
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="WrapWholeWords">
                            It's always a good idea to check your network connection sources to ensure they work as expected.
                        </TextBlock>
                    </Expander>
                    <Expander MaxWidth="600" HorizontalContentAlignment="Left">
                        <Expander.Header>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Reconnect to your wireless network" />
                        </Expander.Header>
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}" TextWrapping="WrapWholeWords">
                            Sometimes your wireless connection could behave unexpectedly. Reconnecting could be a major fix for this kind of issue.
                        </TextBlock>
                    </Expander>
                </StackPanel>
            </ScrollViewer>
        </Grid>
        <Grid
            x:Name="Grid"
            Margin="4"
            ui:UIElementExtensions.ClipToBounds="True">
            <ProgressBar
                x:Name="ProgressLoading"
                Height="2"
                VerticalAlignment="Top"
                Canvas.ZIndex="1"
                IsIndeterminate="True" />
            <Border ui:UIElementExtensions.ClipToBounds="True" CornerRadius="6">
                <WebView2
                    x:Name="WebViewElement"
                    x:FieldModifier="public"
                    AllowDrop="True"
                    Canvas.ZIndex="2" />

            </Border>
        </Grid>
    </Grid>
</Page>