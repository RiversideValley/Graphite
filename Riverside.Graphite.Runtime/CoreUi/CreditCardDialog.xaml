<UserControl
    x:Class="Riverside.Graphite.Runtime.CoreUi.CreditCardDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <TextBox x:Name="CardNameTextBox" Header="Card Name" PlaceholderText="Enter card name"/>
        <TextBox x:Name="CardNumberTextBox" Header="Card Number" PlaceholderText="Enter card number" MaxLength="19"/>
        <StackPanel Orientation="Horizontal" Spacing="12">
            <TextBox x:Name="ExpirationTextBox" Header="Expiration Date" PlaceholderText="MM/YY" Width="120"/>
            <PasswordBox x:Name="CVVBox" Header="CVV" PlaceholderText="Enter CVV" MaxLength="4" Width="100"/>
        </StackPanel>
        <ToggleSwitch x:Name="ShowCVVToggle" Header="Show CVV" OffContent="Hide" OnContent="Show"/>
    </StackPanel>
</UserControl>

