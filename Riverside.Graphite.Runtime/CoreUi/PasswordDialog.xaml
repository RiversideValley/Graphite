<UserControl
    x:Class="Riverside.Graphite.Runtime.CoreUi.PasswordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <TextBox x:Name="WebsiteTextBox" Header="Website" PlaceholderText="Enter website URL"/>
        <TextBox x:Name="UsernameTextBox" Header="Username" PlaceholderText="Enter username or email"/>
        <PasswordBox x:Name="PasswordBox" Header="Password" PlaceholderText="Enter password"/>
        <ToggleSwitch x:Name="ShowPasswordToggle" Header="Show Password" OffContent="Hide" OnContent="Show"/>
    </StackPanel>
</UserControl>
